{
  "name": "Tronscan Signer",
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.bundle.js"
    ],
    "persistent": true
  },
  "permissions": [
    "<all_urls>",
    "*://*/*",
    "activeTab",
    "tabs",
    "cookies",
    "background",
    "contextMenus",
    "unlimitedStorage",
    "storage",
    "notifications"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "externally_connectable": {
    "id": [
      "*"
    ],
    "matches": [
      "*://*.tronscan.org/*",
      "*://localhost/*",
      "http://localhost/*",
      "<all_urls>"
    ]
  },
  "content_scripts": [{
    "js": [ "contentInject.bundle.js" ],
    "run_at": "document_end",
    "matches": [
      "http://localhost/*"
    ],
    "all_frames": true
  }]
}
